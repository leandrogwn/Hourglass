{
    "manifestVersion": 1,
    "id": "Hourglass",
    "publisher": "Hourglass",
    "version": "1.0.0",
    "name": "Hourglass",
    "description": "Gerenciamento de tempo de execução de tarefas.",
    "public": false,
    "categories": ["Plan and track","Test"],
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "icons": {
        "default": "images/logo128x128.png"
    },
    "content": {
        "details": {
            "path": "details.md"
        }
    }, 
    "branding": {
        "color": "rgb(93, 67, 208)",
        "theme": "dark"
    },
    "contributions": [
        {
            "id": "TaskWatcher",
            "type": "ms.vss-web.hub",
            "description": "Hub para contagem de tempo",
            "targets": [
                "ms.vss-work-web.work-hub-group"
            ],
            "properties": {
                "name": "Gerir Tempo",
                "order": 99,
                "uri": "index.html"
            },
            "icons": {
                "default": "images/logo16x16.png"
            }
        }
    ],
    "files":[
        {
            "path": "index.html",
            "addressable": true
        },
        {
            "path": "node_modules/vss-web-extension-sdk/lib",
            "addressable": true,
            "packagePath": "lib"
        },
        {
            "path": "images",
            "addressable": true
        },
        {   
            "path": "css",
            "addressable": true
        }
    ],"scopes": [
        "vso.work"
    ]
}